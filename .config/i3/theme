set $fg1 #de8c63
set $fg2 #9a94bd
set $fg3 #7abecc
set $fg4 #d76a5b

set $bg1 #180b13
set $bg2 #25141f
set $bg3 #311c29
set $bg4 #472a3c


set $tc1 #1099d0
set $tc2 #ff7700

# class                 border	backgr.	text	indicator	child_border

client.focused          $tc2	$bg1	$tc1	$bg1		$tc2
client.focused_inactive $bg1     $bg1     $fg		$bg2		$bg3
client.unfocused        $bg1     $fg     $bg1		$bg1			$tc1
client.urgent           #ff0000 $bg1     $fg		$bg1			$bg1
client.placeholder      $bg1     $bg1     $fg		$bg1			$bg1

client.background       $bg1

# is used in the bar {} block below.
#font pango:quicksand bold 16
#font pango:monospace bold 14
font pango:Roboto Mono bold 12
#font pango:Liberation Mono bold 14

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	id b1
	status_command i3status
		i3bar_command i3bar 
		#position top
		position bottom
		workspace_min_width 7
		padding 0px 10px
		separator_symbol :: 
 		colors {
 			background $bg1
			#statusline #00aaff #tmux sline
			statusline $tc1
			separator  $bg

# #			<colorclass>		<edge>	<bg>	<text>
			focused_workspace	$tc2	$bg1	$tc2
			active_workspace	$bg2	$fg3	#ffffff
			inactive_workspace	$bg2 $bg3 $tc1
			urgent_workspace	$tc1	#009000 #ffffff
			binding_mode		#2f343a #900000 #ffffff
 		}
 }

