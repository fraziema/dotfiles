general {
	colors = true
	interval = 30
	color_good = "#989898"
	color_degraded = "#8c7f22"
	color_bad = "#be2422"
}


order += "battery all"
order += "time"

battery all {
	last_full_capacity = true
	low_threshold = 20
	threshold_type = "percentage"
	format = "Battery: %status %percentage %remaining "
}
time {
	format = " %H:%M %d %b "
}
