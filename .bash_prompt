#!/usr/bin/env bash

function st {
	if [[ -z $(git status -s 2>/dev/null) ]]; then 
		gc="$clean"  
	else 
		gc="$dirty"
	fi
	echo -n "$gc[$(git branch --show-current 2>/dev/null)]$Reset"
}

function sesh {
	if [[ -n $SSH_CLIENT ]]; then 
		echo -n "$sc($USER@$HOSTNAME)$Reset"
	fi
}
PROMPT_COMMAND='
	source ~/.bash_colors
	clean=$Green
	dirty=$Red
	sc=$Cyan
	
	PS1=" $(sesh)\n $(st) \w > "
	'



