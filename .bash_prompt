st(){
	if [[ -z $(git status -s 2>/dev/null) ]]; then 
		tput setaf $c  
	else 
		tput setaf $d
	fi
}

sesh(){
	if [[ -z $SSH_CLIENT ]]; then 
		echo -n $HOSTNAME
	else 
		tput setaf 6
		echo -n $HOSTNAME
	fi
}

PROMPT_COMMAND='
	d=9;
	c=10;
	CMD1=$(git branch --show-current 2>/dev/null)
	CMD0=$(sesh)$(st)
';
	
PS1='\n $(tput setaf 3)\u @ ${CMD0} [${CMD1}]\n $(tput setaf 4)\w > $(tput setaf 15)'
