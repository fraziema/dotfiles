#!/usr/bin/env bash

function st {
	GS="$(git branch --show-current 2>/dev/null)"
	if [[ -z $GS ]]; then 
		gc="$notgit"
	elif [[ -z $(git status -s 2>/dev/null) ]]; then 
		gc="$clean[$GS]"  
	else 
		gc="$dirty[$GS ++]"
	fi
	echo -n "$gc"
}

function sesh {
	if [[ -n $SSH_CLIENT ]]; then 
		echo -n "$sc($USER@$HOSTNAME)$Reset"
	fi
}
PROMPT_COMMAND='
	source ~/.bash_colors
	clean=$BGreen
	dirty=$BRed
	notgit=$BBlue
	sc=$Cyan
	
	PS1=" $(sesh)\n $(st) \w $Reset> "
	'



